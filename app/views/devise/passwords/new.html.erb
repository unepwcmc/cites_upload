<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-stacked' }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert-message block-message error">
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <fieldset>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
  </fieldset>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "btn success" %><br />
    <%= render :partial => "devise/shared/links" %>
  </div>
<% end %>

