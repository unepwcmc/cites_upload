<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-stacked"}) do |f| %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %><br />
        <%= link_to "Forgot your password?", new_user_password_path %>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="clearfix">
        <div class="input">
          <ul class="inputs-list">
            <li>
            <label>
              <%= f.check_box :remember_me %>
              <span>Remember me</span>
            </label>
            </li>
          </ul>
        </div>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Sign in", :class => "btn success" %>
    </div>
  </fieldset>
<% end %>

