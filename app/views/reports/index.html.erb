<div class="page-header">
  <h1><%= t('reports.index.header') %></h1>
</div>

<% if current_user %>
  <p><%= link_to "Submit a report", new_report_path, :class => "btn primary" %></p>
<% end %>
<table class="zebra-striped">
  <thead>
    <tr>
      <th>Country</th>
      <% (@min_year..@max_year).each do |year| %>
        <th><%= year %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.country %></td>
        <% (@min_year..@max_year).each do |year| %>
          <% report = Report.where(:year => year, :country => country).first %>
          <td><%= report.try(:created_at)||"n/a" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
