<p><%= link_to "Add admin", new_admin_path, :class => "btn success" %></p>
<table class="zebra-striped condensed-table bordered-table">
  <thead>
    <tr>
      <th><%= t('generic.name') %></th>
      <th><%= t('generic.email') %></th>
      <th><%= t('generic.institution') %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= mail_to admin.email %></td>
        <td><%= admin.institution %></td>
      </tr>
    <% end %>
  </tbody>
</table>
