<h2>Add new admin</h2>

<%= form_for(@admin, :html => {:class => "form-stacked"}) do |f| %>
  <% if @admin.errors.any? %>
    <div class="alert-message block-message error">
      <%= @admin.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe %>
    </div>
  <% end %>
  <%= f.hidden_field :approved %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :institution %>
      <div class="input">
        <%= f.text_field :institution %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Add", :class => "btn success" %>
    </div>
  </fieldset>
<% end %>


